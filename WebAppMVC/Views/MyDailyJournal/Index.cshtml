@model IEnumerable<WebAppMVC_Models.MyDailyJournalModel>

<div class="container p-3">
	<div class="row pt-4">
		<h2 class="text-primary ">Мой ежедневник</h2>
	</div>
</div>

<div class="text-center">
	<a asp-action="Create" asp-controller="MyDailyJournal" class="btn btn-primary">
		Создать новую запись
	</a>
</div>
<br />

<div class="w-10">



	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-hover table-sm align-middle shadow-sm mt-3">
			<thead class="table-success text-center">
				<tr>
					<th>Выбор</th>
					<th>Дата и время</th>
					<th>Сообщение</th>
					<th>Операции</th>
				</tr>
			</thead>
			<tbody>
				@foreach(var obj in Model)
				{
					<tr>
						<td width="3%" class="text-center fs-6"><input type="checkbox" name="selectedIds" value="@obj.Id" class="select-item" /></td>
						<td width="10%" class="text-nowrap">@obj.LogDate.ToString("dd.MM.yyyy HH:mm:ss")</td>
						<td>@Html.Raw(obj.Text)</td>
						<td width="150px">

							<div class="d-flex justify-content-center w-100 btn-group" role="group">
								<a asp-controller="MyDailyJournal" asp-route-Id="@obj.Id" asp-action="Edit" class="btn-sm btn-dark">
									Edit
								</a>
								<a asp-controller="MyDailyJournal" asp-route-Id="@obj.Id" asp-action="Delete" class="btn-sm btn-danger">
									Delete
								</a>
								<a asp-controller="MyDailyJournal" asp-route-Id="@obj.Id" asp-action="ShowMoreInfo" class="btn-sm btn-info">
									Info
								</a>
							</div>

						</td>
					</tr>
				}
			</tbody>
		</table>
	} 
	else
	{
		<b>No Data in table!</b>	
	}

</div>


