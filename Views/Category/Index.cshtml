@model IEnumerable<WebAppMVC.Models.CategoryModel>


<div class="container p-2">
	<div class="row pt-2">
		<h2 class="text-primary">Category List</h2>
	</div>
	<div class="col-6 text-end" >
		<a asp-action="Create" asp-controller="Category" class="btn btn-primary"><i class="fas fa-plus"></i> Create NEW Category</a>
	</div>
</div>

<br/><br/>

@if(Model.Count() > 0)
{
	<table class="table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					Category Name
				</th>
				<th>
					Display Order
				</th>
				<th>Операции</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var obj in Model)
			{
				<tr>
					<td width="50%">@(obj.Name)</td>
					<td width="20%">@obj.DisplayOrder</td>
					<td class="text-center">
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
								<i class="fas fa-edit"></i>
								Edit
							</a>
							<a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
								<i class="fas fa-remove"></i>
								Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
} 
else
{
	<b>No Data in table!</b>	
}
