@model WebAppMVC_Models.MyDailyJournalModel

<form method="post" asp-controller="MyDailyJournal" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Редактировать запись в журнале</h2>
        </div>

        <div class="row">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="LogDate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="LogDate" class="form-control" />
                <span asp-validation-for="LogDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Text"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Text" class="form-control summernote"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Отредактировать запись" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-step-backward"></i> Назад</a>
                        </div>
                    </div>
                </div>

        </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('.summernote').summernote({
                height:150
            });

        });
    </script>
}