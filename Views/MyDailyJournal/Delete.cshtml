@model WebAppMVC_Models.MyDailyJournalModel

<form method="post" asp-action="DeletePost">
   
    <input asp-for="Id" hidden/>
    
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3"> Delete Category</h2>
        </div>

        <div class="row">
            <div class="form-group row g-1">
                <div class="col-4">
                    <label asp-for="LogDate"></label>
                </div>
                <div class="col-8">
                    <input asp-for="LogDate" class="form-control" disabled />
                </div>

            </div>
            <div class="form-group row g-1">
                <div class="col-4">
                    <label asp-for="Text"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Text" class="form-control" disabled />
                </div>
            </div>

            <div class="form-group row g-1">
                <div class="col-8 offset-4 row">
                    <div class="col">
                            
                        <input type="submit" class="btn btn-danger w-100" value="Delete" />
                    </div>
                    <div class="col">

                        <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-step-backward"></i> Назад</a>
                    </div>
                </div>
            </div>

        </div>

    </div>
</form>

