@model IEnumerable<WebAppMVC.Models.MyDailyJournal>

@{
	ViewData["Title"] = "Мой ежедневник";
}

<div class="container p-3">
	<div class="row pt-4">
		<h2 class="text-primary ">Мой ежедневник</h2>
	</div>
</div>

<br/>

<div class="text-center">
	<a asp-action="Create" asp-controller="MyDailyJournal" class="btn btn-primary">
		Создать новую запись в (Мой ежедневник)
	</a>
</div>

<br/>

@if (Model.Count() > 0)
{
	<table class="table-bordered table-striped table-bordered table-info" style="width:100%">
		<thead>
			<tr>
				<th class="text-center">Отметить</th>
				<th class="text-center">Дата и время</th>
				<th class="text-center">Сообщение</th>
				<th class="text-center">Пусто</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var obj in Model)
			{
				<tr>
					<td width="5%" class="text-center"><input type="checkbox" name="selectedIds" value="@obj.Id" class="select-item" /></td>
					<td width="20%">@obj.LogDate</td>
					<td width="70%">@obj.Text</td>
					<td width="5%" class="text-center">-</td>
				</tr>
			}
		</tbody>
	</table>
} 
else
{
	<b>No Data in table!</b>	
}
