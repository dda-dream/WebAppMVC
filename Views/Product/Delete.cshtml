@model WebAppMVC.Models.ViewModels.ProductViewModel

@{
    var title = "Delete Product";
}

<form method="post" asp-controller="Product">
    @if (Model.Product.Id != 0)
    {
        <input name="Id" asp-for="Product.Id" hidden />
    }

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>

        <div class="row">
            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Name"></label>
                    </div>
                    <div class="col-8  mb-1">
                        <input asp-for="Product.Name" class="form-control" disabled />
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Price"></label>
                    </div>
                    <div class="col-8 mb-1">
                        <input asp-for="Product.Price" class="form-control" disabled />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Description"></label>
                    </div>
                    <div class="col-8 mb-1">
                        <textarea asp-for="Product.Description" class="form-control summernote" id="descrEditor"></textarea>
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.CategoryId"></label>
                    </div>
                    <div class="col-8 mb-4">
                        
                        <select asp-for="Product.CategoryId" class="form-control" disabled>
                            <option disabled selected>@Model.Product.Category.Name</option>
                        </select>
                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        
                     </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-3 offset-1 pt-4">
                <img src="@WebConstants.ImagePath@Model.Product.Image" class="card-img img-fluid rounded shadow mx-auto d-block" />
            </div>

        </div>

    </div>
</form>


@section Scripts {

    

    <script>
        $(document).ready(
            function()
            {
              $('.summernote').summernote({
                  height:150
              });

              $('#descrEditor').summernote('disable');
            }
        );

        function validateInput()
        {
            if(document.getElementById("uploadBox").value == "")
            {
                Swal.fire({
                  title: "Error!",
                  text: "Select image!",
                  icon: "error"
                });
                return false;
            }
            return true;
        }
    </script>
}
    @{
        <div class="text-info">DEBUG INFO:<br></div>
        
        this.Write("Category Name = "+Model.Product.Category);
        <br>
        this.Write("End of UpdateOrInsert.cshtml");

    }