@model IEnumerable<WebAppMVC_Models.ProductModel>


<div class="container p-2">
	<div class="row pt-2">
		<h2 class="text-primary">Product List</h2>
	</div>
	<div class="col-6 text-end">
		<a asp-action="UpdateOrInsert" asp-controller="Product" class="btn btn-primary"><i class="fas fa-plus"></i> Create New Product</a>
	</div>
</div>

<br />
<br />

@if (Model.Count()  > 0)
{
	<table class="table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					Product Name
				</th>
				<th>
					Description
				</th>
				<th>
					CategoryId
				</th>
				<th>
					Category Name
				</th>

				<th>
					Price
				</th>
				<th>
					Операции
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model)
			{
				<tr>
					<td>@obj.Name</td>
					<td>@Html.Raw(obj.Description)</td>
					<td>@obj.CategoryId</td>
					<td>@obj.Category.Name</td>

					<td>@obj.Price</td>
					<td class="text-center">
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="UpdateOrInsert" class="btn btn-primary mx-2">
								Edit
							</a>
							<a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
								Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<b>No product in table!</b>
}
